<body>

    <h1>Add Post</h1>
    <form class="container" action="/posts" method="POST">
        <div class="mb-3">
            <label for="exampleInputTitle" class="form-label">Title</label>
            <input type="text" name="title" id="title" placeholder="Title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="exampleInputAuthor" class="form-label">Author</label>
            <input type="text" name="author" id="author" placeholder="Author" class="form-control">
        </div>
        <div class="mb-3">
            <label for="exampleInputDescription" class="form-label">Description</label>
            <textarea type="text" name="description" id="description" class="form-control" cols="30 " rows="3 " id="exampleInputDescription "></textarea>
        </div>
        <button type="submit " class="btn btn-outline-dark ">Add</button>
    </form>

